[run]
omit =
    # Infrastructure / entrypoints — not meaningfully testable in unit tests
    manage.py
    config/wsgi.py
    config/asgi.py
    config/settings/*
    # Migrations — auto-generated
    */migrations/*
    # Test files themselves
    conftest.py
    */tests.py

[report]
show_missing = True
skip_covered = False
